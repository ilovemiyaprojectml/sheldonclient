{
  "name": "ruf",
  "version": "0.1",
  "extends": "@nrwl/schematics",
  "schematics": {
    "application": {
      "factory": "./collection/application",
      "schema": "./collection/application/schema.json",
      "aliases": ["app"],
      "description": "Create a RUF application"
    },
    "rufhybridapp": {
      "factory": "./collection/hybridapplication",
      "schema": "./collection/hybridapplication/schema.json",
      "aliases": ["rufhybrid", "rh"],
      "description": "Create a RUF hybrid application"
    },
    "library": {
      "factory": "./collection/library",
      "schema": "./collection/library/schema.json",
      "aliases": ["lib"],
      "description": "Create a RUF library"
    },
    "component": {
      "factory": "./collection/component",
      "schema": "./collection/component/schema.json",
      "aliases": ["c"],
      "description": "Create an Angular Component"
    }
  }
}
