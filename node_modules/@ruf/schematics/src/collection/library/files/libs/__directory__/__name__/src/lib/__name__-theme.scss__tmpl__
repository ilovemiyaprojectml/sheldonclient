// IMPORTANT - PLEASE DO NOT REMOVE SPECIAL COMMENTS STARTING WITH //@@.
// THESE ARE REQUIRED FOR ADDING IMPORTS AND INCLUDES FOR A NEWLY CREATED COMPONENT

@import 'node_modules/@ruf/theming/styles/theming/typography';

//@@IMPORT

// a convenience mixin that aggregates all of your component theme mixins
@mixin <%= name %>-all-theme($theme, $config: null) {
  // include your theme mixins below

  //@@INCLUDE

  @include <%= name %>-typography($config);
}

@mixin <%= name %>-typography($theme, $config: ruf-typography-config()) {
  // include your typography mixins below

  //@@TYPOGRAPHY
}
