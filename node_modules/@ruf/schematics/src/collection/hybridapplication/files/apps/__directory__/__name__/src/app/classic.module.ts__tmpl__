import * as angular from 'angular';
import '@ruf/fis-widgets';
import { rufConfig } from './app.config';

export const ClassicModule = angular.module('classic.app', ['fis.widgets']);

ClassicModule.controller('classicApp.CheckboxRadioCtrl', ['$scope', function ($scope) {
  $scope.user = {};
  $scope.user.status = 'inactive';
  $scope.user.moreLanguages = { groovy: true, ruby: true };
  $scope.moreLanguages = [
    {name: 'python', label: 'Python'},
    {name: 'groovy', label: 'Groovy'},
    {name: 'ruby', label: 'Ruby'}
  ];
  $scope.statusData = [
    {value: 'active', label: 'Active'},
    {value: 'inactive', label: 'Inactive'},
    {value: 'suspended', label: 'Suspended'}
  ];
}]);

ClassicModule.constant('fisConfig', rufConfig);
